<div class="card mb-3" style="max-width: 1400px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{book.productImage}}" class="img-fluid rounded-start" alt="{{book.name}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title " style="font-size: 26px; font-weight: bold;  color: #333; ">{{book.name}}</h5>
        <h5 class="card-title " style="font-size: 20px; font-weight: bold;  color: red; ">{{book.price}}.000đ</h5>
        <p class="card-text">{{book.productDescription}}</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        <form action="/book/addtocart/{{book._id}}" method="POST">
          <input type="hidden" name="productId" value="{{book._id}}">
          <button type="submit" class="btn btn-primary">Mua sản phẩm</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{> footer}}

